<!DOCTYPE html>
<html>
  <head>
    <title>A2S</title>
    <link rel="stylesheet" href="/css/reset.css" />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <% include ./includes/header.ejs %>

    <section class="headline">
      <img src="/image/logo.png" alt="SPM LOGO" />
      <p class="headline">
        GROWERS. CHOI DINING. KITSCH KITSCH DINING. MATGGAL POCHA.SENDWAY.
        MOTIVE.
      </p>
      <p class="tagline">
        DONGBAEK KATSU. HAPPY CHEESE SMILE. ASEUL CHEONGDAM. RYUSENSO.
      </p>

      <p class="punchline">BONJOURDOG BAKESHOP. HANOKU. ONHWA DINING</p>
    </section>

    <!-- 음식점 외부 사진 -->
    <section class="section headline">
      <img
        class="section__img"
        src="https://plus.unsplash.com/premium_photo-1704855341450-e3f4a010b199?w=400&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxlZGl0b3JpYWwtZmVlZHwyfHx8ZW58MHx8fHx8"
        alt="음식점 사진"
      />
    </section>

    <script src="https://unpkg.com/scrollreveal"></script>

    <script>
      ScrollReveal().reveal('.headline');
      ScrollReveal().reveal('.tagline', { delay: 500 });
      ScrollReveal().reveal('.punchline', { delay: 2000 });

      const section = document.querySelector('.section');

      setInterval(() => {
        section.innerHTML = `<img class='section__img' src="https://images.unsplash.com/photo-1704731016343-cda2e2d77f31?w=400&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxlZGl0b3JpYWwtZmVlZHwxNHx8fGVufDB8fHx8fA%3D%3D" />`;
      }, 3000);
      setInterval(() => {
        section.innerHTML = `<img class='section__img' src="https://plus.unsplash.com/premium_photo-1704855341450-e3f4a010b199?w=400&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxlZGl0b3JpYWwtZmVlZHwyfHx8ZW58MHx8fHx8" />`;
      }, 6000);
    </script>
  </body>
</html>
